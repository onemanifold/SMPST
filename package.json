{
  "name": "smpst-ide",
  "version": "0.1.0-alpha",
  "description": "Web-based IDE for Multiparty Session Types with CFG-based verification",
  "author": "onemanifold",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/onemanifold/SMPST.git"
  },
  "homepage": "https://onemanifold.github.io/SMPST/",
  "bugs": {
    "url": "https://github.com/onemanifold/SMPST/issues"
  },
  "keywords": [
    "multiparty-session-types",
    "scribble",
    "protocol",
    "verification",
    "IDE",
    "TypeScript",
    "Svelte"
  ],
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run postbuild",
    "postbuild": "mv dist/SMPST/monacoeditorwork dist/monacoeditorwork 2>/dev/null || true",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:theorems": "vitest run src/__tests__/theorems",
    "test:theorems:watch": "vitest watch src/__tests__/theorems",
    "test:theorems:ui": "vitest --ui src/__tests__/theorems",
    "test:coverage:theorems": "vitest run --coverage src/__tests__/theorems",
    "test:golden": "vitest run tests/golden/__tests__",
    "test:golden:watch": "vitest watch tests/golden/__tests__",
    "test:golden:update": "echo 'Warning: This will overwrite all golden snapshots!' && read -p 'Press Ctrl+C to cancel, Enter to continue...' && rm -rf tests/golden/snapshots/* && npm run test:golden",
    "generate:golden": "tsx scripts/generate-golden-protocols.ts",
    "parse": "tsx src/core/parser/cli.ts",
    "project": "tsx src/core/projection/cli.ts",
    "project:help": "tsx src/core/projection/cli.ts --help"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.1.0",
    "@testing-library/svelte": "^5.2.0",
    "@tsconfig/svelte": "^5.0.0",
    "@types/d3": "^7.4.0",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.0.0",
    "jsdom": "^25.0.0",
    "svelte": "^4.2.0",
    "svelte-check": "^4.0.0",
    "tslib": "^2.6.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "chevrotain": "^11.0.0",
    "d3": "^7.9.0",
    "dexie": "^4.2.1",
    "monaco-editor": "^0.54.0",
    "ts-morph": "^27.0.2",
    "vite-plugin-monaco-editor": "^1.1.0"
  }
}
